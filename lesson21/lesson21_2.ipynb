    "\n",
    "genai.configure(api_key=os.environ['api_key'])\n",
    "model = genai.GenerativeModel('gemini-1.5-flash')\n",
    "response = model.generate_content(\"請問如何學習python?\")\n",
    "print(response.text)"
   ]
  }
